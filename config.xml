<?xml version="1.0" encoding="UTF-8"?>  

 <widget xmlns   = "http://www.w3.org/ns/widgets"  
     xmlns:gap = "http://phonegap.com/ns/1.0"  
     id = "com.phonegap.app9" 
     version  = "1.0.0">  

<name>app9 GEOLOCALIZADOR GPS</name>

<description>
Aplicacion que sirve para la geolocalizacion
</description>

<author href="https://build.phonegap.com" email="josealejomonteslopez@gmail.com">
Jose Alejo Montes Lopez
</author>



<!--Personalizala aplicacion y plataforma-->
<preference name="orientation"    value="default"/>
<!--<perference name="orientation"    value="portrait"/>
<perference name="orientation"    value="landscape"/>-->
<preference name="target-device"    value="universal"/>
<preference name="fullscreen"    value="true"/>
<preference name="android-installLocation"    value="auto"/>
<preference name="permissions"    value="INTERNET"/>

<!--Para accesar a paginas en internet-->
  <allow-intent href="https://*/*"/>
  <acces origin="https://*/*"/>
  <allow-intent href="http://*/*"/>
  <acces origin="http://*/*"/>
  <plugin name="cordova-plugin-whitelist" source="npm"/>

<!--Plugins-->
<!--Core plugins-->
<plugin name="cordova-plugin-device" spec="~1.1.4"/>
<plugin name="cordova-plugin-vibration" spec="~2.1.3"/>
<plugin name="cordova-plugin-dialogs" spec="~1.3.1"/>

<plugin name="cordova-plugin-geolocation" spec="2.4.3"/>
<!--Third part plugins-->


  
<!--Colocar icono app-->

<icon src="res/android/mdpi.png"/>
</widget>